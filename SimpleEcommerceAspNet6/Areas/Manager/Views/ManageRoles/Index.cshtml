@model IEnumerable<SimpleEcommerceAspNet6.Models.Role>

@{
    ViewData["Title"] = "Quản lý quyền truy cập ";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Manager" asp-controller="DashBoard" asp-action="Index"  class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>DashBoard</a>
            <a asp-area="Manager" asp-controller="ManageRoles" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active"></span>
        </nav>
    </div>
</div>
<div class="table-responsive ">
    <div class="d-flex justify-content-between ">
        <h3 class="text-center mb-4" style="color:#03bcf4">Danh sách quyền truy cập</h3>
        <a asp-area="Manager" asp-controller="ManageRoles" asp-action="Create" class="btn btn-info m-r-5 mb-2">Tạo mới quyền truy cập</a>
    </div>
    <table class="table table-bordered" style="text-align:center">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Role Name</th>
                <th scope="col">Description</th>
                <th class="px-0 mx-0" scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RoleId</td>
                        <td>@item.RoleName</td>
                        <td>@item.Description</td>
                       
                        <td>
                            <div class="dropdown dropdown-animated scale-left">

                                <i type="button" class="anticon anticon-ordered-list" dropdown-toggle" data-toggle="dropdown">
                                </i>
                                <div class="dropdown-menu">
                                    <a asp-area="Manager" asp-controller="ManageRoles" asp-action="Details" asp-route-id="@item.RoleId" class="text-decoration-none mx-2 dropdown-item" style="color:black">
                                        <i class="anticon anticon-select">Details</i>
                                    </a>
                                    <a asp-area="Manager" asp-controller="ManageRoles" asp-action="Edit" asp-route-id="@item.RoleId" class="text-decoration-none mx-2 dropdown-item" style="color:black">
                                        <i class="anticon anticon-edit">Edit</i>
                                    </a>
                                    <a asp-area="Manager" asp-controller="ManageRoles" asp-action="Delete" asp-route-id="@item.RoleId" class="text-decoration-none mx-2 dropdown-item" style="color:black">
                                        <i class="anticon anticon-delete">Delete</i>
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
